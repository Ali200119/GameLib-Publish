@model AboutEditVM

@{
    ViewBag.Title = "Edit About";
}

<div style="margin-left: 40px; margin-top: 40px">
    <form method="post" asp-area="Admin" asp-controller="About" asp-action="Edit" enctype="multipart/form-data">

        <img class="mb-3" style="width: 300px; height: 300px; border-radius: unset; object-fit: cover" src="~/assets/img/about/@Model.Image" />

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload your about image here</label>
            <input class="form-control" id="formFile" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" placeholder="Title" autocomplete="off">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea class="form-control" rows="7" id="Description" asp-for="Description" placeholder="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-3">Update</button>
    </form>

    <a class="btn mt-5" style="color: white;background-color: gray" asp-area="Admin" asp-controller="About" asp-action="Index">Back</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}