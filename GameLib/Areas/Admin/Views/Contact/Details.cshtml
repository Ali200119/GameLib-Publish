@model ContactDetailsVM

@{
    ViewBag.Title = "Contact Details";
}

<style>
    h1, h2, p {
        color: black;
    }

    p {
        font-size: 16px;
    }
</style>

<div style="width: 70%; margin-left: 40px">
    <div class="mt-3">
        <h1>Email</h1>

        <h2 class="mt-2">@Model.Email</h2>
    </div>

    <div class="mt-5">
        <h1>Full Name</h1>

        <h2 class="mt-2">@Model.FullName</h2>
    </div>

    <div class="mt-5">
        <h1>Message</h1>

        <p class="mt-2">@Model.Message</p>
    </div>

    <div class="mt-5">
        <h1>Create Time</h1>

        <h2 class="mt-2">@Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt", new CultureInfo("en"))</h2>
    </div>


    <a class="btn mt-5" style="color: white;background-color: gray" asp-area="Admin" asp-controller="Contact" asp-action="Index">Back</a>
</div>