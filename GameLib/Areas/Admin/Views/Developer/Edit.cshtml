@model DeveloperEditVM

@{
    ViewBag.Title = "Edit Developer";
}

<div style="margin-left: 40px; margin-top: 40px">
    <form method="post" asp-area="Admin" asp-controller="Developer" asp-action="Edit" enctype="multipart/form-data">
        <img class="mb-3" style="width: 300px; height: 300px; border-radius: unset; object-fit: cover" src="~/assets/img/developers/@Model.Logo" />

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload your developer logo here</label>
            <input class="form-control" id="formFile" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" placeholder="Name" autocomplete="off">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-4">Update</button>
    </form>

    <a class="btn mt-4" style="color: white;background-color: gray" asp-area="Admin" asp-controller="Developer" asp-action="Index">Back</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}