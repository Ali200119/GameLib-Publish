@model AdvantageCreateVM

@{
    ViewBag.Title = "Create Advantage";
}

<div style="margin-left: 40px; margin-top: 40px">
    <form method="post" asp-area="Admin" asp-controller="Advantage" asp-action="Create">
        <div class="mb-3">
            <label>Enter here "i" tag from Font Awesome</label>
            <input class="form-control" asp-for="Icon" placeholder="Icon" autocomplete="off">
            <span class="text-danger" asp-validation-for="Icon"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" placeholder="Title" autocomplete="off">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" placeholder="Description" autocomplete="off">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-4">Create</button>
    </form>

    <a class="btn mt-4" style="color: white;background-color: gray" asp-area="Admin" asp-controller="Advantage" asp-action="Index">Back</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}