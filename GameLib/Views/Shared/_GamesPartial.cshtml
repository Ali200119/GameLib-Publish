@model IEnumerable<Game>

@foreach (var game in Model)
{
    <div class="item">
        <a class="image" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">
            <img src="~/assets/img/games/@game.GameImages.FirstOrDefault(gi => gi.IsMain).Name">
        </a>

        <a class="name" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">
            <h3>@game.Name</h3>
        </a>

        <div class="price-view">
            <div class="price">
                <span>$</span>
                <span>@game.Price</span>
            </div>

            <a class="view" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">View Game</a>
        </div>
    </div>
}